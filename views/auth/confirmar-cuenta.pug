extends ../layout/index

block contenido
    div.py-10
        h1.text-center.font-extrabold.my-10.text-4xl.text-pigmentgreen Bienes 
            span.font-normal.text-black Raíces
        h2.text-center.font-extrabold.text-2xl.text-black= page

    div(class="bg-white shadow py-8 px-4 rounded-lg max-w-md mx-auto")
        p(class=error ? 'bg-redd' : 'bg-celadon').py-2.px-5.rounded-lg.w-full.font-bold.text-center.text-white.uppercase= mensaje

        if !error
            a(href="/auth/login" class="text-center font-bold text-sm text-slate-600 uppercase mt-10 block") Ya Puedes Iniciar Sesión
        else 
            a(href="/auth/registro" class="text-center font-bold text-sm text-slate-600 uppercase mt-10 block") Ocurrio un Error, Intenta de Nuevo...