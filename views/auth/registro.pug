extends ../layout/index

block contenido
    div.py-10
        h1.text-center.font-foco.my-10.text-4xl.text-darkblue Bienes 
            span.font-normal.text-black Raíces
        h2.text-center.font-rubi.text-2xl.text-black= page

        if errores
            div(class="max-w-md mx-auto my-6 space-y-3")
                each error, index in errores
                    div(
                        id=`alert-${index}`
                        class="flex items-center p-3 text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400 transition ease-in-out duration-500 transform opacity-100 scale-100 shadow-sm"
                    )
                        svg(class="w-5 h-5 text-red-600 mr-3", xmlns="http://www.w3.org/2000/svg", fill="none", viewBox="0 0 24 24", stroke="currentColor", "stroke-width"="2")
                            path("stroke-linecap"="round", "stroke-linejoin"="round", d="M6 18L18 6M6 6l12 12")
                        p.text-sm.flex-1= error.msg
                        button(
                            class="ml-3 text-gray-500 hover:text-gray-700 focus:outline-none"
                            onclick=`document.getElementById('alert-${index}').classList.add('opacity-0', 'scale-90'); setTimeout(() => document.getElementById('alert-${index}').remove(), 500)`
                        ) 
                            | ×
                    script.
                        setTimeout(() => {
                            const alert = document.getElementById('alert-${index}');
                            if (alert) {
                                alert.classList.add('opacity-0', 'scale-90');
                                setTimeout(() => alert.remove(), 500);
                            }
                        }, 1000);

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form(method="POST" action="/auth/registro" noValidate).space-y-5.px-6
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-black.mb-2.font-foco Nombre Completo: 
                        input#name.w-full.px-3.py-2.border-2.border-black.rounded-md(type="text" placeholder="Ej. Juanito Peréz" name="nombre" value=(usuario && usuario.nombre ? usuario.nombre : ""))
                    div
                        label.block.text-sm.uppercase.text-black.mb-2.font-foco User: 
                        input#alias.w-full.px-3.py-2.border-2.border-black.rounded-md(type="text" placeholder="Ej. juanperez123" name="alias" value=(usuario && usuario.alias ? usuario.alias : ""))
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-foco Email de Registro: 
                        input#email.w-full.px-3.py-2.border-2.border-black.rounded-md(type="email" placeholder="Ej. usuario@paisdelasmaravillas.com" name="email" value=(usuario && usuario.email ? usuario.email : ""))
                    div
                        label.block.text-sm.uppercase.text-black.mb-2.font-foco Fecha de Nacimiento: 
                        input#birthdate.w-full.px-3.py-2.border-2.border-black.rounded-md(type="date" name="fecha_nacimiento" value=(usuario && usuario.fecha_nacimiento ? usuario.fecha_nacimiento : ""))
                    div
                        label.block.text-sm.uppercase.text-black.mb-2.font-foco Contraseña: 
                        input#password.w-full.px-3.py-2.border-2.border-black.rounded-md(type="password" placeholder="Minimo de 8 caracteres" name="password")
                    div
                        label.block.text-sm.uppercase.text-black.mb-2.font-foco Confirmar Contraseña: 
                        input#password2.w-full.px-3.py-2.border-2.border-black.rounded-md(type="password" placeholder="Minimo de 8 caracteres" name="repetir_password")
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs.font-foco(href="/auth/login" class="hover:underline decoration-2 hover:decoration-darkblue") ¿Ya tienes cuenta? Inicia Sesión
                        a.text-gray-500.text-xs.font-foco(href="/auth/olvide-password" class="hover:underline decoration-2 hover:decoration-darkblue") Recuperar Contraseña
                    input(class="w-full transition ease-in-out delay-150 bg-darkblue hover:-translate-y-1 hover:scale-105 hover:bg-babyblue duration-300 text-white font-bold py-3 rounded-lg cursor-pointer transition duration-300" type="submit" value="Crear cuenta")    


